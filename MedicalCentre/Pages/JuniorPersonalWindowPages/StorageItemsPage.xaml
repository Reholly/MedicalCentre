<Page x:Class="MedicalCentre.Pages.JuniorPersonalWindowPages.StorageItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.JuniorPersonalWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StorageItemsPage"
      ShowsNavigationUI="False">
    <Grid>
        <Menu Height="17.5" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="LightGray">
            <MenuItem Header="Add" Command="{Binding AddItemCommand}" Height="17.5"/>
            <MenuItem Header="Remove" Command="{Binding RemoveItemCommand}" Height="17.5"/>
        </Menu>
        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="True"
                  Background="AliceBlue" Margin="0 17.5 0 0"/>
    </Grid>
</Page>