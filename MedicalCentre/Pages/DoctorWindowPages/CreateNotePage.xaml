<Page x:Class="MedicalCentre.Pages.DoctorWindowPages.CreateNotePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.DoctorWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNotePage"
      Background="Transparent"
      ShowsNavigationUI="False">
    <Grid Background="#679ed2">
        <StackPanel>
            <TextBlock Text="Заголовок:"/>
            <TextBox x:Name="NoteTitleBox" Background="LightGray"/>
            <TextBlock Text="Содержание:"/>
            <TextBox x:Name="NoteTextBox" Background="LightGray" TextWrapping="WrapWithOverflow"/>
        </StackPanel>
        <Button x:Name="SaveButton" Background="LightGray" Height="50" Width="200" VerticalAlignment="Bottom" 
                Content="Save Note" Command="{Binding SaveNoteCommand}" BorderBrush="Transparent"/>
    </Grid>
</Page>