<Page x:Class="MedicalCentre.Pages.DoctorWindowPages.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.DoctorWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="530"
      Title="AppointmentPage">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button HorizontalAlignment="Left" Content="Закончить приём" Command="{Binding AppointmentEndingCommand}"/>
                <Button HorizontalAlignment="Right" Content="Печать" Command="{Binding NotePrintingCommand}"/>
            </StackPanel>
            <TextBox TextWrapping="Wrap" Name="AppointmentTitleBox">
                Заголовок приёма
            </TextBox>
            <TextBox TextWrapping="Wrap" Name="AppointmentTextBox">
                Содержание приёма
            </TextBox>
            <TextBlock Name="PatientsSNP"/>
        </StackPanel>
    </Grid>
</Page>