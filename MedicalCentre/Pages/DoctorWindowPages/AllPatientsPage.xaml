<Page x:Class="MedicalCentre.Pages.DoctorWindowPages.AllPatientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.DoctorWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="All Patients"
      Background="Transparent"
      ShowsNavigationUI="False">
    <Grid>
        <Menu Height="17.5" VerticalAlignment="Top" Background="LightGray">
            <MenuItem Header="Add" Command="{Binding AddPatientCommand}"/>
            <MenuItem Header="Delete" Command="{Binding DeletePatientCommand}"/>
            <MenuItem Header="Show Info" Command="{Binding ShowPatientInfoCommand}"/>
        </Menu>
        <DataGrid Grid.Column="0" AutoGenerateColumns="True"
                  Background="AliceBlue" Margin="0 17.5 0 0" CanUserAddRows="True" CanUserDeleteRows="True" 
                  CanUserReorderColumns="True" ItemsSource="{Binding Patients}" SelectedItem="{Binding SelectedPatient}"/>
    </Grid>
</Page>