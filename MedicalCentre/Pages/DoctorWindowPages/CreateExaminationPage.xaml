<Page x:Class="MedicalCentre.Pages.DoctorWindowPages.CreateExaminationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.DoctorWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateExaminationPage"
      Background="Transparent"
      ShowsNavigationUI="False">
    <Grid Background="AliceBlue">
        <StackPanel>
            <TextBlock Text="Title:"/>
            <TextBox x:Name="ExaminationTitleBox" Background="LightGray"/>
            <TextBlock Text="Examination Text:"/>
            <TextBox x:Name="ExaminationTextBox" Background="LightGray" TextWrapping="WrapWithOverflow"/>
        </StackPanel>
        <Button x:Name="SaveButton" Background="LightGray" Height="50" Width="200" VerticalAlignment="Bottom" 
                Content="Save Examination" Command="{Binding SaveExaminationCommand}" BorderBrush="Transparent"/>
    </Grid>
</Page>