<Page x:Class="MedicalCentre.Pages.DoctorWindowPages.TodaysAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalCentre.Pages.DoctorWindowPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Today's Examinations" 
      Background="Transparent"
      ShowsNavigationUI="False">
    <Grid>
        <DataGrid x:Name="todaysPatients" AutoGenerateColumns="True"
                  Background="#679ed2" Margin="0 40 0 0" CanUserAddRows="False" CanUserDeleteRows="True" 
                  CanUserReorderColumns="True" ItemsSource="{Binding Appointments}" SelectedItem="{Binding SelectedAppointment}"/>
        <Menu Height="40" VerticalAlignment="Top" Background="#26527c">
            <MenuItem Header="Отменить приём" Command="{Binding DeleteAppointmentCommand}"
                      MaxWidth="800"/>
            
        </Menu>
    </Grid>
</Page>